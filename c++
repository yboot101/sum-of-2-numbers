#include "stdafx.h"
#include <iostream>
using namespace std;

int main()
{
	int numberone = 50;
	int numbertwo = 100;
	int total = numberone + numbertwo;

	//To display the total to the screen
	cout << "The sum of " << numberone << " + " << numbertwo << " = " << total << endl;

	cout << endl;
	return 0;
}

